#ifndef PRODUCT_H
#define PRODUCT_H

#include <string>
#include <vector>
using namespace std;

struct Product {
    string id;
    string name;
    string category;
    double price;
    int stock;
};

// Các hàm quản lý sản phẩm
void addProduct(vector<Product>& products);
void removeProduct(vector<Product>& products);

#endif
